generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ChannelTopic {
  Category
  Discussion
  News
  None
}

model Guild {
  id        String    @id @unique
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  channels  Channel[]
  Member    Member[]
}

model Symbol {
  id        String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String
  logo        String
  currency    String
  open        Float
  close       Float
  high        Float
  low         Float
  change      Float
  channels    Channel[]
}

model Channel {
  id        String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  topic    ChannelTopic @default(None)
  guildId  String
  symbolId String
  guild    Guild        @relation(fields: [guildId], references: [id])
  symbol   Symbol       @relation(fields: [symbolId], references: [id])
}

model Member {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String

  guildId String
  guild   Guild  @relation(fields: [guildId], references: [id])

  welcomeMessageSent Boolean @default(false)
}
